{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DevWatchMan",
  "version": "0.1.1",
  "identifier": "com.sakila.devwatchman",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:backend && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DevWatchMan",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' asset:; img-src 'self' asset: data: blob: http://127.0.0.1:*; style-src 'self' 'unsafe-inline'; script-src 'self'; frame-src http://127.0.0.1:*; connect-src ipc: http://127.0.0.1:* ws://127.0.0.1:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/devwatchman-backend"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico"
    ]
  }
}
